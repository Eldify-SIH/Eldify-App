<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/app"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/et_connection_ip_addr_1"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rectangle_3"
            android:hint="ESP 32"
            android:textAlignment="center"
            app2:layout_constraintEnd_toStartOf="@id/et_connection_ip_addr_2"
            app2:layout_constraintHorizontal_bias="0.388"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_connection_ip_addr_2"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rectangle_3"
            android:hint="IP Subnets"
            android:textAlignment="center"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toEndOf="@+id/et_connection_ip_addr_1"
            app2:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_connect_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:backgroundTint="#5DB075"
            android:text="Connect Now"
            android:textColor="@color/white"
            android:textSize="16sp"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.544"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/et_connection_ip_addr_1_vid"
            app2:layout_constraintVertical_bias="0.194"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_layout_bot"
            app:layout_constraintVertical_bias="0.019" />

        <EditText
            android:id="@+id/et_connection_ip_addr_1_vid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_3"
            android:hint="Rasberry PI"
            android:textAlignment="center"
            app2:layout_constraintEnd_toStartOf="@+id/et_connection_ip_addr_2_vid"
            app2:layout_constraintHorizontal_bias="0.23"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/et_connection_ip_addr_1" />

        <EditText
            android:id="@+id/et_connection_ip_addr_2_vid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_3"
            android:hint="IP Subnets"
            android:textAlignment="center"
            app2:layout_constraintStart_toEndOf="@+id/et_connection_ip_addr_1_vid"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/et_connection_ip_addr_2" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
